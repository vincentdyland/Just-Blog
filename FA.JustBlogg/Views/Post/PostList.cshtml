@model List<FA.JustBlogg.Context.tbl_PostList>
@{
    ViewBag.Title = "PostList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="masthead" style="background-image: url('/wwwroot/img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="post-heading">
                    <h1>Man must explore, and this is exploration at its greatest</h1>
                    <h2 class="subheading">Problems look mighty small from 150 miles up</h2>
                    <span class="meta">
                        Posted by
                        <a href="#">Start Bootstrap</a>
                        on August 24, 2019
                    </span>
                </div>
            </div>
        </div>
    </div>
</header>

<table class="table table-hover">
    <tr>
        <th>Name</th>
        <th>ShortDescription</th>
        <th>Description</th>
        <th>PostOn</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.ShortDescription</td>
            <td>@item.Description</td>
            <td>@item.PostedOn</td>
            <td>
                <a href="@Url.Action("Post", new { item.ID, item.Name, item.ShortDescription, item.Description, item.PostedOn})" class="btn btn-success">Edit</a>
                <a href="@Url.Action("Delete", new { item.ID})" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
</table>
